<% if current_user %>
    <div class="row">
      <div class="col-sm-1">
        <div class="super-small-image-avatar bordered", style="background-image: url('<%= current_user.becomes(User).decorate.user_avatar_path %>')"></div>
        <span><%= current_user.becomes(User).decorate.full_name %></span>
      </div>
      <div class="col-sm-11">
        <%= form_tag(controller: 'comments', action: 'create') do %>
            <%= hidden_field_tag :post_id, @post.id %>
            <%= text_area_tag :content %>
            <%= submit_tag 'Додати' , class: 'btn'%>
        <% end %>
      </div>
    </div>
<% end %>
